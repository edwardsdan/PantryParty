
@using Microsoft.AspNet.Identity;

<!DOCTYPE html>
<html>
<head>
    <style>

        div.transbox {
            margin: 30px;
            background-color: #ffffff;
            border: 1px solid black;
            opacity: 0.6;
            filter: alpha(opacity=60); /* For IE8 and earlier */
        }

            div.transbox p {
                margin: 5%;
                font-weight: bold;
                color: #000000;
            }
    </style>
</head>
<body>

    <div class="background">
        <div class="transbox">



            <br />
            <h1 class="myButton ">Search Recipes</h1>
            <font size="3">Search recipes by the following ingredients: </font><br />

            <form action="/Home/FridgeItems" method="get">
                <input type="text" name="input" />
                <input type="hidden" name="UserID" value="@User.Identity.GetUserId()" />
                <input type="submit" value="Find Recipes" />
            </form>
            <font size="1">Use commas to separate each item. (ex: apples,pork shoulder,cinnamon)</font><br>
            <br /><br /><br />

            <form action="/Home/EditIngred" method="get">
                <input type="hidden" name="UserID" value="@User.Identity.GetUserId()" />
                <input type="submit" value="Edit Ingredients" />
            </form><br />

            <form action="/Home/UpdateProfile" method="post">
                <input type="hidden" name="UserID" value="@User.Identity.GetUserId()" />
                <input type="submit" value="Update User Profile" />
            </form>

            @* The following code is to enable the Raptorize plugin. Credit to Phil Coffman and Noah Stokes.
                The Raptorize plugin is deprecated as of jQuery 1.5.0, it will be changed accordingly
                when D has time to edit it.*@
            <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.3/jquery.min.js"></script>
            <script>!window.jQuery && document.write('<script src="jquery-1.4.3.min.js"><\/script>')</script>
            <script src="../../raptor/jquery.raptorize.1.0.js">
                $(window).load(function () {
                    $('.myButton').raptorize({
                        'enterOn': 'konami-code'
                    });
                });
                $(window).load(function () {
                    $('.myButton').raptorize({
                        'enterOn': 'click'
                    });
                });
            </script>




            <style>
                #element {
                    background-color: white;
                    opacity: .5;
                    margin: auto;
                }
            </style>

        </div>
    </div>

</body>
</html>