@using PantryParty.Models;
@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "NearbyUsers";
    pantrypartyEntities ORM = new pantrypartyEntities();
}

<h3>Here's a list of nearby users with your missing ingredients</h3>
<table class="table">
    <tr>
        <th>User's Name</th>
        <th>User's Ingredients</th>
        <th>User's City</th>
        <th>Email</th>
        <th>Phone Number</th>
    </tr>
    @foreach (AspNetUser user in ViewBag.NearbyUsers)
    {
        if (user.ID != User.Identity.GetUserId())
        {
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>
                    This user has: @foreach (Ingredient item in ViewBag.MissingIngredients)
                    {
                        // debug logic
                        if (ORM.UserIngredients.Where(x => x.IngredientID == item.Name) != null && ORM.UserIngredients.Where(x => x.UserID == user.ID) != null)
                        {
                            <div>@item.Name</div>
                        }
                    }
                </td>
                <td>@user.City</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
            </tr>
        }
    }
</table>


